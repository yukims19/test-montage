{
  "name": "montage",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node server",
    "heroku-postbuild": "npm install && cd client && npm install --only-dev && npm install && npm run build"
  },
  "engines": {
    "node": "8.1.3",
    "npm": "5.0.4"
  },
  "dependencies": {
    "express": "^4.16.2",
    "idx": "^2.4.0",
    "kue": "^0.11.6",
    "pg": "^7.4.3",
    "pg-escape": "^0.2.0",
    "pg-promise": "^8.4.5",
    "sqlite3": "^4.0.2"
  },
  "main": "server.js",
  "devDependencies": {
    "concurrently": "^3.5.0"
  }
}
